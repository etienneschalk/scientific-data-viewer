{
  "name": "scientific-data-viewer",
  "displayName": "Scientific Data Viewer",
  "description": "A VSCode extension for viewing scientific data files including NetCDF, Zarr, HDF5, and more",
  "version": "0.1.0",
  "publisher": "your-company-name",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Data Science",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "netcdf",
    "zarr",
    "hdf5",
    "scientific-data",
    "xarray",
    "data-visualization",
    "climate-data",
    "geospatial"
  ],
  "activationEvents": [
    "onLanguage:netcdf",
    "onCommand:scientificDataViewer.openViewer",
    "onFileSystem:netcdf",
    "onFileSystem:zarr"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scientificDataViewer.openViewer",
        "title": "Open Scientific Data Viewer",
        "category": "Scientific Data"
      },
      {
        "command": "scientificDataViewer.selectPythonInterpreter",
        "title": "Select Python Interpreter",
        "category": "Scientific Data"
      },
      {
        "command": "scientificDataViewer.refreshData",
        "title": "Refresh Data",
        "category": "Scientific Data"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .nc || resourceExtname == .netcdf || resourceExtname == .zarr",
          "command": "scientificDataViewer.openViewer",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "scientificDataViewer.openViewer",
          "when": "true"
        },
        {
          "command": "scientificDataViewer.selectPythonInterpreter",
          "when": "true"
        },
        {
          "command": "scientificDataViewer.refreshData",
          "when": "true"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "scientificDataViewer",
          "name": "Scientific Data Viewer",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "scientific-data-activity",
          "title": "Scientific Data",
          "icon": "$(database)"
        }
      ]
    },
    "languages": [
      {
        "id": "netcdf",
        "extensions": [
          ".nc",
          ".netcdf"
        ],
        "aliases": [
          "NetCDF",
          "netcdf"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "Scientific Data Viewer",
      "properties": {
        "scientificDataViewer.pythonPath": {
          "type": "string",
          "default": "",
          "description": "Path to Python interpreter for data processing"
        },
        "scientificDataViewer.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh data when files change"
        },
        "scientificDataViewer.maxFileSize": {
          "type": "number",
          "default": 100,
          "description": "Maximum file size in MB to load automatically"
        },
        "scientificDataViewer.defaultView": {
          "type": "string",
          "enum": [
            "table",
            "tree",
            "plot"
          ],
          "default": "tree",
          "description": "Default view mode for data display"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0",
    "mocha": "^10.2.0",
    "glob": "^10.3.0",
    "@types/mocha": "^10.0.0",
    "@types/glob": "^8.1.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
