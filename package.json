{
  "name": "scientific-data-viewer",
  "displayName": "Scientific Data Viewer",
  "description": "A VSCode extension for viewing scientific data files including NetCDF, Zarr, HDF5, GRIB, GeoTIFF, and more",
  "version": "0.1.0",
  "publisher": "eschalk0",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=22.0.0"
  },
  "extensionDependencies": [],
  "categories": [
    "Data Science",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "netcdf",
    "zarr",
    "hdf5",
    "grib",
    "geotiff",
    "rasterio",
    "scientific-data",
    "xarray",
    "data-visualization",
    "climate-data",
    "geospatial",
    "cfgrib",
    "sentinel"
  ],
  "activationEvents": [
    "onLanguage:netcdf",
    "onLanguage:hdf5",
    "onLanguage:grib",
    "onLanguage:geotiff",
    "onCommand:scientificDataViewer.openViewer",
    "onFileSystem:netcdf",
    "onFileSystem:zarr",
    "onFileSystem:grib",
    "onFileSystem:geotiff",
    "onCustomEditor:netcdfEditor",
    "onCustomEditor:hdf5Editor",
    "onCustomEditor:zarrEditor",
    "onCustomEditor:gribEditor",
    "onCustomEditor:geotiffEditor"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scientificDataViewer.openViewer",
        "title": "Open Scientific Data Viewer",
        "category": "Scientific Data Viewer"
      },
      {
        "command": "scientificDataViewer.refreshPythonEnvironment",
        "title": "Refresh Python Environment",
        "category": "Scientific Data Viewer"
      },
      {
        "command": "scientificDataViewer.showLogs",
        "title": "Show Extension Logs",
        "category": "Scientific Data Viewer"
      },
      {
        "command": "scientificDataViewer.showSettings",
        "title": "Show Settings",
        "category": "Scientific Data Viewer"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .nc || resourceExtname == .netcdf || resourceExtname == .zarr || resourceExtname == .h5 || resourceExtname == .hdf5 || resourceExtname == .grib || resourceExtname == .grib2 || resourceExtname == .tif || resourceExtname == .tiff || resourceExtname == .geotiff || resourceExtname == .jp2 || resourceExtname == .jpeg2000 || resourceExtname == .safe || resourceExtname == .nc4 || resourceExtname == .cdf",
          "command": "scientificDataViewer.openViewer",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "scientificDataViewer.openViewer",
          "when": "true"
        },
        {
          "command": "scientificDataViewer.refreshPythonEnvironment",
          "when": "true"
        },
        {
          "command": "scientificDataViewer.showLogs",
          "when": "true"
        },
        {
          "command": "scientificDataViewer.showSettings",
          "when": "true"
        }
      ]
    },
    "languages": [
      {
        "id": "netcdf",
        "extensions": [
          ".nc",
          ".netcdf",
          ".nc4",
          ".cdf"
        ],
        "aliases": [
          "NetCDF",
          "netcdf"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "hdf5",
        "extensions": [
          ".h5",
          ".hdf5"
        ],
        "aliases": [
          "HDF5",
          "hdf5"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "zarr",
        "extensions": [
          ".zarr"
        ],
        "aliases": [
          "Zarr",
          "zarr"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "grib",
        "extensions": [
          ".grib",
          ".grib2"
        ],
        "aliases": [
          "GRIB",
          "grib"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "geotiff",
        "extensions": [
          ".tif",
          ".tiff",
          ".geotiff",
          ".jp2",
          ".jpeg2000"
        ],
        "aliases": [
          "GeoTIFF",
          "geotiff"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "customEditors": [
      {
        "viewType": "netcdfEditor",
        "displayName": "NetCDF Data Viewer",
        "selector": [
          {
            "filenamePattern": "*.nc"
          },
          {
            "filenamePattern": "*.netcdf"
          },
          {
            "filenamePattern": "*.nc4"
          },
          {
            "filenamePattern": "*.cdf"
          }
        ]
      },
      {
        "viewType": "hdf5Editor",
        "displayName": "HDF5 Data Viewer",
        "selector": [
          {
            "filenamePattern": "*.h5"
          },
          {
            "filenamePattern": "*.hdf5"
          }
        ]
      },
      {
        "viewType": "zarrEditor",
        "displayName": "Zarr Data Viewer",
        "selector": [
          {
            "filenamePattern": "*.zarr"
          }
        ]
      },
      {
        "viewType": "gribEditor",
        "displayName": "GRIB Data Viewer",
        "selector": [
          {
            "filenamePattern": "*.grib"
          },
          {
            "filenamePattern": "*.grib2"
          }
        ]
      },
      {
        "viewType": "geotiffEditor",
        "displayName": "GeoTIFF Data Viewer",
        "selector": [
          {
            "filenamePattern": "*.tif"
          },
          {
            "filenamePattern": "*.tiff"
          },
          {
            "filenamePattern": "*.geotiff"
          },
          {
            "filenamePattern": "*.jp2"
          },
          {
            "filenamePattern": "*.jpeg2000"
          }
        ]
      }
    ],
    "configuration": {
      "title": "Scientific Data Viewer",
      "properties": {
        "scientificDataViewer.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh data when files change"
        },
        "scientificDataViewer.maxFileSize": {
          "type": "number",
          "default": 500,
          "description": "Maximum file size in MB to load automatically"
        },
        "scientificDataViewer.defaultView": {
          "type": "string",
          "enum": [
            "default"
          ],
          "default": "default",
          "description": "Default view mode for data display"
        },
        "scientificDataViewer.allowMultipleTabsForSameFile": {
          "type": "boolean",
          "default": false,
          "description": "Allow opening multiple tabs for the same file. When enabled, each 'Open in Data Viewer' action creates a new tab. When disabled (default), focuses on existing tab if file is already open.",
          "experimental": true,
          "markdownDescription": "**Experimental Feature** - Allow opening multiple tabs for the same file. When enabled, each 'Open in Data Viewer' action creates a new tab. When disabled (default), focuses on existing tab if file is already open.\n\n⚠️ **Warning**: This feature is experimental and may cause unexpected behavior or performance issues."
        },
        "scientificDataViewer.plottingCapabilities": {
          "type": "boolean",
          "default": false,
          "experimental": true,
          "markdownDescription": "**Experimental Feature** - Enable plotting capabilities. When enabled, shows the 'Create Plot' button and 'Visualization' pane in the data viewer.\n\n⚠️ **Warning**: This feature is experimental and may cause unexpected behavior or performance issues.",
          "description": "Enable plotting capabilities. When enabled, shows the 'Create Plot' button and 'Visualization' pane in the data viewer."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish",
    "openvsx-publish": "npx ovsx publish -p $OPENVSX_TOKEN"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.22.0",
    "mocha": "^10.2.0",
    "glob": "^10.3.0",
    "@types/mocha": "^10.0.0",
    "@types/glob": "^8.1.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/etienneschalk/scientific-data-viewer.git"
  },
  "homepage": "https://github.com/etienneschalk/scientific-data-viewer#readme",
  "bugs": {
    "url": "https://github.com/etienneschalk/scientific-data-viewer/issues"
  }
}
