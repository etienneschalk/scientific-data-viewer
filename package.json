{
    "name": "scientific-data-viewer",
    "displayName": "Scientific Data Viewer",
    "description": "A VSCode extension for viewing scientific data files including NetCDF, Zarr, HDF5, GRIB, GeoTIFF, and more",
    "version": "0.3.0",
    "publisher": "eschalk0",
    "icon": "media/icon.png",
    "engines": {
        "vscode": "^1.74.0",
        "node": ">=22.0.0"
    },
    "extensionDependencies": [],
    "categories": [
        "Data Science",
        "Visualization",
        "Other"
    ],
    "keywords": [
        "netcdf",
        "zarr",
        "hdf5",
        "grib",
        "geotiff",
        "rasterio",
        "scientific-data",
        "xarray",
        "data-visualization",
        "climate-data",
        "geospatial",
        "cfgrib",
        "sentinel"
    ],
    "activationEvents": [
        "onLanguage:netcdf",
        "onLanguage:hdf5",
        "onLanguage:grib",
        "onLanguage:geotiff",
        "onLanguage:jp2",
        "onFileSystem:netcdf",
        "onFileSystem:zarr",
        "onFileSystem:grib",
        "onFileSystem:geotiff",
        "onFileSystem:jp2"
    ],
    "main": "./out/src/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "scientificDataViewer.openViewer",
                "title": "Open Scientific Data Viewer",
                "category": "Scientific Data Viewer"
            },
            {
                "command": "scientificDataViewer.openViewerFolder",
                "title": "Open Scientific Data Viewer (Folder)",
                "category": "Scientific Data Viewer"
            },
            {
                "command": "scientificDataViewer.refreshPythonEnvironment",
                "title": "Refresh Python Environment",
                "category": "Scientific Data Viewer"
            },
            {
                "command": "scientificDataViewer.showLogs",
                "title": "Show Extension Logs",
                "category": "Scientific Data Viewer"
            },
            {
                "command": "scientificDataViewer.showSettings",
                "title": "Show Settings",
                "category": "Scientific Data Viewer"
            },
            {
                "command": "scientificDataViewer.openDeveloperTools",
                "title": "Open Developer Tools",
                "category": "Scientific Data Viewer"
            },
            {
                "command": "scientificDataViewer.expandAll",
                "title": "Expand All",
                "category": "Scientific Data Viewer",
                "icon": "$(expand-all)"
            },
            {
                "command": "scientificDataViewer.selectPythonInterpreter",
                "title": "Select Python Interpreter",
                "category": "Scientific Data Viewer"
            },
            {
                "command": "scientificDataViewer.detectVirtualEnvironments",
                "title": "Detect Virtual Environments",
                "category": "Scientific Data Viewer"
            },
            {
                "command": "scientificDataViewer.resetPythonInterpreter",
                "title": "Reset to Default Python Interpreter",
                "category": "Scientific Data Viewer"
            },
            {
                "command": "scientificDataViewer.createExtensionEnvironment",
                "title": "Create Extension Virtual Environment",
                "category": "Scientific Data Viewer"
            },
            {
                "command": "scientificDataViewer.manageExtensionEnvironment",
                "title": "Manage Extension Virtual Environment",
                "category": "Scientific Data Viewer"
            },
            {
                "command": "scientificDataViewer.deleteExtensionEnvironment",
                "title": "Delete Extension Virtual Environment",
                "category": "Scientific Data Viewer"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceExtname == .nc || resourceExtname == .netcdf || resourceExtname == .zarr || resourceExtname == .h5 || resourceExtname == .hdf5 || resourceExtname == .grib || resourceExtname == .grib2 || resourceExtname == .grb || resourceExtname == .tif || resourceExtname == .tiff || resourceExtname == .geotiff || resourceExtname == .jp2 || resourceExtname == .jpeg2000 || resourceExtname == .safe || resourceExtname == .nc4 || resourceExtname == .cdf",
                    "command": "scientificDataViewer.openViewer",
                    "group": "navigation"
                }
            ],
            "commandPalette": [
                {
                    "command": "scientificDataViewer.openViewer",
                    "when": "true"
                },
                {
                    "command": "scientificDataViewer.openViewerFolder",
                    "when": "true"
                },
                {
                    "command": "scientificDataViewer.refreshPythonEnvironment",
                    "when": "true"
                },
                {
                    "command": "scientificDataViewer.showLogs",
                    "when": "true"
                },
                {
                    "command": "scientificDataViewer.showSettings",
                    "when": "true"
                },
                {
                    "command": "scientificDataViewer.openDeveloperTools",
                    "when": "true"
                },
                {
                    "command": "scientificDataViewer.expandAll",
                    "when": "false"
                },
                {
                    "command": "scientificDataViewer.selectPythonInterpreter",
                    "when": "true"
                },
                {
                    "command": "scientificDataViewer.detectVirtualEnvironments",
                    "when": "true"
                },
                {
                    "command": "scientificDataViewer.resetPythonInterpreter",
                    "when": "true"
                },
                {
                    "command": "scientificDataViewer.createExtensionEnvironment",
                    "when": "true"
                },
                {
                    "command": "scientificDataViewer.manageExtensionEnvironment",
                    "when": "true"
                },
                {
                    "command": "scientificDataViewer.deleteExtensionEnvironment",
                    "when": "true"
                }
            ],
            "view/title": [
                {
                    "command": "scientificDataViewer.expandAll",
                    "when": "view == scientificDataViewer.outline",
                    "group": "navigation@2"
                }
            ]
        },
        "languages": [
            {
                "id": "netcdf",
                "extensions": [
                    ".nc",
                    ".netcdf",
                    ".nc4",
                    ".cdf"
                ],
                "aliases": [
                    "NetCDF",
                    "netcdf"
                ],
                "icon": {
                    "light": "./media/icon.svg",
                    "dark": "./media/icon.svg"
                }
            },
            {
                "id": "hdf5",
                "extensions": [
                    ".h5",
                    ".hdf5"
                ],
                "aliases": [
                    "HDF5",
                    "hdf5"
                ],
                "icon": {
                    "light": "./media/icon.svg",
                    "dark": "./media/icon.svg"
                }
            },
            {
                "id": "zarr",
                "extensions": [
                    ".zarr"
                ],
                "aliases": [
                    "Zarr",
                    "zarr"
                ],
                "icon": {
                    "light": "./media/icon.svg",
                    "dark": "./media/icon.svg"
                }
            },
            {
                "id": "grib",
                "extensions": [
                    ".grib",
                    ".grib2",
                    ".grb"
                ],
                "aliases": [
                    "GRIB",
                    "grib"
                ],
                "icon": {
                    "light": "./media/icon.svg",
                    "dark": "./media/icon.svg"
                }
            },
            {
                "id": "geotiff",
                "extensions": [
                    ".tif",
                    ".tiff",
                    ".geotiff"
                ],
                "aliases": [
                    "GeoTIFF",
                    "geotiff"
                ],
                "icon": {
                    "light": "./media/icon.svg",
                    "dark": "./media/icon.svg"
                }
            },
            {
                "id": "jp2",
                "extensions": [
                    ".jp2",
                    ".jpeg2000"
                ],
                "aliases": [
                    "JPEG-2000",
                    "jpeg2000"
                ],
                "icon": {
                    "light": "./media/icon.svg",
                    "dark": "./media/icon.svg"
                }
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "scientificDataViewer.outline",
                    "name": "Data Structure",
                    "type": "tree",
                    "accessibilityHelpContent": "Scientific Data Viewer - Data Structure for the currently opened file",
                    "visibility": "visible",
                    "when": "resourceExtname == .nc || resourceExtname == .netcdf || resourceExtname == .zarr || resourceExtname == .h5 || resourceExtname == .hdf5 || resourceExtname == .grib || resourceExtname == .grib2 || resourceExtname == .grb || resourceExtname == .tif || resourceExtname == .tiff || resourceExtname == .geotiff || resourceExtname == .jp2 || resourceExtname == .jpeg2000 || resourceExtname == .safe || resourceExtname == .nc4 || resourceExtname == .cdf"
                }
            ]
        },
        "customEditors": [
            {
                "viewType": "netcdfEditor",
                "displayName": "NetCDF Data Viewer",
                "selector": [
                    {
                        "filenamePattern": "*.nc"
                    },
                    {
                        "filenamePattern": "*.netcdf"
                    },
                    {
                        "filenamePattern": "*.nc4"
                    },
                    {
                        "filenamePattern": "*.cdf"
                    }
                ],
                "icon": {
                    "light": "./media/icon.svg",
                    "dark": "./media/icon.svg"
                }
            },
            {
                "viewType": "hdf5Editor",
                "displayName": "HDF5 Data Viewer",
                "selector": [
                    {
                        "filenamePattern": "*.h5"
                    },
                    {
                        "filenamePattern": "*.hdf5"
                    }
                ],
                "icon": {
                    "light": "./media/icon.svg",
                    "dark": "./media/icon.svg"
                }
            },
            {
                "viewType": "zarrEditor",
                "displayName": "Zarr Data Viewer",
                "selector": [
                    {
                        "filenamePattern": "*.zarr"
                    }
                ],
                "icon": {
                    "light": "./media/icon.svg",
                    "dark": "./media/icon.svg"
                }
            },
            {
                "viewType": "gribEditor",
                "displayName": "GRIB Data Viewer",
                "selector": [
                    {
                        "filenamePattern": "*.grib"
                    },
                    {
                        "filenamePattern": "*.grib2"
                    },
                    {
                        "filenamePattern": "*.grb"
                    }
                ],
                "icon": {
                    "light": "./media/icon.svg",
                    "dark": "./media/icon.svg"
                }
            },
            {
                "viewType": "geotiffEditor",
                "displayName": "GeoTIFF Data Viewer",
                "selector": [
                    {
                        "filenamePattern": "*.tif"
                    },
                    {
                        "filenamePattern": "*.tiff"
                    },
                    {
                        "filenamePattern": "*.geotiff"
                    }
                ],
                "icon": {
                    "light": "./media/icon.svg",
                    "dark": "./media/icon.svg"
                }
            },
            {
                "viewType": "jp2Editor",
                "displayName": "JPEG-2000 Data Viewer",
                "selector": [
                    {
                        "filenamePattern": "*.jp2"
                    },
                    {
                        "filenamePattern": "*.jpeg2000"
                    }
                ],
                "icon": {
                    "light": "./media/icon.svg",
                    "dark": "./media/icon.svg"
                }
            }
        ],
        "configuration": {
            "title": "Scientific Data Viewer",
            "properties": {
                "scientificDataViewer.maxFileSize": {
                    "type": "number",
                    "default": 10000,
                    "description": "Maximum file size in MB to load automatically"
                },
                "scientificDataViewer.defaultView": {
                    "type": "string",
                    "enum": [
                        "default"
                    ],
                    "default": "default",
                    "description": "Default view mode for data display"
                },
                "scientificDataViewer.allowMultipleTabsForSameFile": {
                    "type": "boolean",
                    "default": false,
                    "description": "Allow opening multiple tabs for the same file. When enabled, each 'Open in Data Viewer' action creates a new tab. When disabled (default), focuses on existing tab if file is already open.",
                    "experimental": true,
                    "markdownDescription": "**Experimental Feature** - Allow opening multiple tabs for the same file. When enabled, each 'Open in Data Viewer' action creates a new tab. When disabled (default), focuses on existing tab if file is already open.\n\n⚠️ **Warning**: This feature is experimental and may cause unexpected behavior or performance issues."
                },
                "scientificDataViewer.devMode": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable development mode. When enabled, automatically runs 'Show Extension Logs' and 'Open Developer Tools' commands when a scientific data file is opened. Also, reloads the webview script and CSS for faster development feedback loops."
                },
                "scientificDataViewer.matplotlibStyle": {
                    "type": "string",
                    "default": "",
                    "description": "Matplotlib plot style. If empty, automatically detects VSCode theme and applies appropriate style. If set, overrides automatic detection. Examples: 'default', 'dark_background'.",
                    "markdownDescription": "Matplotlib plot style for data visualizations. If empty, automatically detects VSCode theme and applies appropriate style (light theme → 'default', dark theme → 'dark_background'). If set, overrides automatic detection.\n\n**Examples:**\n- `default` - Light theme with white background\n- `dark_background` - Dark theme with black background\n\n**Available styles:** Any valid matplotlib style name (e.g., 'default', 'dark_background', 'seaborn', 'ggplot', etc.)"
                },
                "scientificDataViewer.pythonInterpreter": {
                    "type": "string",
                    "default": "",
                    "description": "Python interpreter path for the extension. If empty, uses the Python extension's active interpreter. Can be set to a virtual environment Python executable.",
                    "markdownDescription": "Python interpreter path for the Scientific Data Viewer extension. If empty, the extension will use the Python extension's active interpreter. You can set this to a specific virtual environment Python executable (e.g., `./venv/bin/python` or `C:\\venv\\Scripts\\python.exe`).\n\n**Examples:**\n- `./venv/bin/python` - Local virtual environment\n- `C:\\venv\\Scripts\\python.exe` - Windows virtual environment\n- `/usr/bin/python3` - System Python\n\n**Note:** This setting overrides the Python extension's interpreter selection for this extension only."
                },
                "scientificDataViewer.autoDetectVirtualEnvironments": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically detect and suggest virtual environments in the workspace (uv, venv, conda, etc.)",
                    "markdownDescription": "Automatically detect virtual environments in the workspace and suggest them for use with the extension. Supports:\n\n- **uv** environments (`.venv` folder)\n- **venv** environments (`venv` folder)\n- **conda** environments\n- **pipenv** environments\n- **poetry** environments\n\nWhen enabled, the extension will scan the workspace for these environments and offer them as options when no Python interpreter is configured."
                },
                "scientificDataViewer.virtualEnvironmentPaths": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "Additional paths to search for virtual environments",
                    "markdownDescription": "Additional paths to search for virtual environments beyond the workspace root. Each path should be a directory that may contain virtual environment folders.\n\n**Examples:**\n- `[\"../shared-envs\", \"/opt/conda/envs\"]`\n- `[\"C:\\Users\\username\\Envs\"]`"
                },
                "scientificDataViewer.useExtensionEnvironment": {
                    "type": "boolean",
                    "default": false,
                    "description": "Use the extension's own virtual environment (requires uv)",
                    "markdownDescription": "When enabled, the extension will create and use its own isolated virtual environment stored in VSCode's extension storage. **Requires `uv` to be installed** - if uv is not available, the extension will fall back to using the Python extension's interpreter.\n\n**Benefits:**\n- Semi-standalone: Only requires uv to be installed\n- Isolated: Won't interfere with other projects\n- Reliable: Always has the required packages\n- Python 3.13: Uses latest Python version for optimal performance"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts --fix",
        "test": "node ./out/test/runTest.js",
        "package": "vsce package",
        "publish": "vsce publish",
        "openvsx-publish": "npx ovsx publish -p $OPENVSX_TOKEN"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.0",
        "@types/node": "22.x",
        "@types/vscode": "^1.74.0",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "@vscode/test-electron": "^2.5.2",
        "@vscode/vsce": "^2.22.0",
        "eslint": "^8.28.0",
        "glob": "^10.3.0",
        "mocha": "^10.2.0",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "axios": "^1.6.0",
        "jsdom": "^27.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/etienneschalk/scientific-data-viewer.git"
    },
    "homepage": "https://github.com/etienneschalk/scientific-data-viewer#readme",
    "bugs": {
        "url": "https://github.com/etienneschalk/scientific-data-viewer/issues"
    }
}
